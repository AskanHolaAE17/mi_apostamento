#form.lead
  =flash[:notice]
  = form_for @contact, action: 'create' do |f|
  

    
    %a{name: 'name'}    
    .dark-green{class: flash[:error_class_name]}
      Введите Ваше имя:
    
    %div    
      = f.text_field :name,             required:    '', 
                                        class:       'input-xlarge', 
                                        maxlength:   '100',
                                        value:       "#{flash[:contact_name] || @exist_contact.name || nil}",
                                        autofocus:    flash[:autofocus_name]
                                                                                           
    %br/                                    
  

  

    -#
      %a{name: 'surname'}
      .dark-green{class: flash[:error_class_surname]}
        Фамилия:
    
      %div    
        = f.text_field :surname,        required:    '', 
                                        class:       'input-xlarge', 
                                        maxlength:   '100',
                                        value:       "#{flash[:contact_surname] || @exist_contact.surname  || nil}",
                                        autofocus:    flash[:autofocus_surname]
      %br/                                        
                                        
                                        
                                        

    %a{name: 'own_gender'}
    .dark-green{class: flash[:error_class_own_gender]}
      Ваш пол:                                        
      
    %br/                                                    
      
        
    =f.radio_button :own_gender, 'М', checked: flash[:contact_own_gender_male_checked], id: 'own_gender_male'
    =f.label :own_gender, 'Мужской', for: 'own_gender_male'
    
    %br/                 
    
    
    =f.radio_button :own_gender, 'Ж', checked: flash[:contact_own_gender_female_checked], id: 'own_gender_female'
    =f.label :own_gender, 'Женский', for: 'own_gender_female'
    
    %br/             

        
    -#      
      =f.radio_button :own_gender, 'ЖМ' "#{flash[:contact_own_gender_other_checked]}", id: 'own_gender_other'
      =f.label :own_gender, 'Другой пол', for: 'own_gender_other'
                                        

  
  

    %a{name: 'city'}
    .dark-green{class: flash[:error_class_city]}
      Город проживания:
    
    %div    
      = f.text_field :city,             required:    '', 
                                        class:       'input-xlarge', 
                                        maxlength:   '100',                              
                                        value:       "#{flash[:contact_city] || @exist_contact.city  || nil}",                                                  
                                        autofocus:    flash[:autofocus_city]
    %br/                                                                            

  


    %a{name: 'country'}
    .dark-green{class: flash[:error_class_country]}
      Страна:
    
    %div    
      = f.text_field :country,          required:    '', 
                                        class:       'input-xlarge', 
                                        maxlength:   '100',
                                        value:       "#{flash[:contact_country] || @exist_contact.country  || nil}",
                                        autofocus:    flash[:autofocus_country]
    %br/                                                                            
  

  

    %a{name: 'birthday'}
    .dark-green{class: flash[:error_class_birthday]}
      Дата рождения:
    
    %div    
      = f.date_select :birthday,        required:    '', 
                                        class:       'input-xlarge', 
                                        maxlength:   100,
                                        autofocus:   flash[:autofocus_birthday],
                                        start_year:  1900,
                                        order:       [:day, :month, :year],
                                        default:     { day:   flash[:contact_birthday_day], 
                                                       month: flash[:contact_birthday_month], 
                                                       year:  flash[:contact_birthday_year]}
                                        
    %br/                                                                            
                                        
                                        

                                        

    %a{name: 'search_for_gender'}
    .dark-green{class: flash[:error_class_search_for_gender]}
      Кто Вас интересует:                                        
      
    %br/                                                    
      
            
                        
    =f.radio_button :search_for_gender, 'М', checked: flash[:contact_search_for_gender_male_checked], id: 'search_for_gender_male'
    =f.label :own_gender, 'Мужчины', for: 'search_for_gender_male'                
    
    %br/             
          

    =f.radio_button :search_for_gender, 'Ж', checked: flash[:contact_search_for_gender_female_checked], id: 'search_for_gender_female'
    =f.label :own_gender, 'Женщины', for: 'search_for_gender_female'                    

    %br/             
    
    
    =f.radio_button :search_for_gender, 'ЖМ', checked: flash[:contact_search_for_gender_both_checked], id: 'search_for_gender_both'
    =f.label :own_gender, 'Оба пола', for: 'search_for_gender_both'            
      
    %br/                                                                    
  

  


    %a{name: 'about_info'}
    .dark-green{class: flash[:error_class_about_info]}
      Жизненные ценности, интересы, надежды:
    
    %div    
      = f.text_area :about_info,        size:        '25x5',
                                        required:    '',                                                                                 
                                        class:       'input-xlarge', 
                                        maxlength:   '1000',
                                        value:       "#{flash[:contact_about_info] || @exist_contact.about_info || nil}",
                                        autofocus:    flash[:autofocus_about_info]
  
    %br/
    
    
    
    
    %a{name: 'deep_info'}
    .dark-green{class: flash[:error_class_deep_info]}
      Жизненные смыслы, сделающие жизнь полной
      .contacts-examples-text
        (например, хочу дом, поездки в Испанию вдвоем, хозяйство, теплицы, 3-их детей, открыть бизнес...):
    
    %div    
      = f.text_area :deep_info,        size:        '25x5',
                                        required:    '',                                                                                 
                                        class:       'input-xlarge', 
                                        maxlength:   '1000',
                                        value:       "#{flash[:contact_deep_info] || @exist_contact.deep_info || nil}",
                                        autofocus:    flash[:autofocus_deep_info]
  
    %br/    
  
  
    
    
    %a{name: 'image'}
    .dark-green{class: flash[:error_class_image]}
      Выберите Ваше фото:
    %div                                        
      =f.file_field :image
  
                                           
  
  

    = f.hidden_field  :email,             value:  @order.email
    = f.hidden_field  :group,             value:  @order.group      
    = f.hidden_field  :order_number,      value:  @order.id   




    %div       
      = f.submit 'Сохранить', class: 'btn btn-success btn-large'  
  
  
  
