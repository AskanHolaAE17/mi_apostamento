- unless @contacts.count == 0 

  - @conter = 1
  - @contacts.each_with_index do |contact, index|
   
    .white_border
    

      -#.contact-image
        =image_tag ''        
    
      %strong
        =contact.name        
  
      = image_tag contact.image.url      
  
      %address
        =contact.city + ', ' + contact.country
      
      .text-success
        =contact.birthday
      
      .lead
        =contact.about_info   
  
      .label.label-success.select_able
        =contact.email        
        
       
    
      %br/
      
      
      -#-if index == 1
        %section
          #form.lead
            %b      
              = render partial: 'consults/consult_form'
      
